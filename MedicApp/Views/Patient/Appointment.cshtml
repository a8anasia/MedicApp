@model AppointmentViewModel

@{
    Layout = null;
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<h2>Book your appointment</h2>

<form asp-controller="Patient" asp-action="CheckAppointment" method="post">
    <div class="form-group m-3">
        <label for="selectedDate">Select Date:</label>
        <input type="date" id="selectedDate" name="SelectedDate" class="form-control w-25" value="@Model.SelectedDate.ToString("yyyy-MM-dd")" />
    </div>

    <div class="form-group m-3">
        <label for="selectedDoctor">Select Doctor:</label>
        <select id="selectedDoctor" name="SelectedDoctorId" class="form-control w-25">
            @foreach (var doctor in Model.Doctors)
            {

                <option value="@doctor.Id">@doctor.Lastname @doctor.Speciality</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary w-25 text-center m-3">
        Add Appointment
    </button>

    @if (ViewData["AvailabilityMessage"] != null)
    {
        <div class="alert " role="alert">
            @ViewData["AvailabilityMessage"]
        </div>
    }
</form>

     